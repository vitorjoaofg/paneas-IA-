{
  "title": "LLM Performance",
  "uid": "llm-performance",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Tokens por Segundo",
      "targets": [
        {
          "expr": "sum(rate(llm_tokens_generated_total[1m])) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "LatÃªncia p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(llm_request_latency_bucket[5m])) by (le, instance))",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "Profundidade da Fila",
      "targets": [
        {
          "expr": "avg(llm_queue_depth) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
    }
  ],
  "time": {"from": "now-6h", "to": "now"}
}
