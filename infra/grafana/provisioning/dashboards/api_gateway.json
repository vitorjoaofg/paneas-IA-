{
  "title": "API Gateway",
  "uid": "api-gateway-dashboard",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Taxa de Requisições",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (method)",
          "legendFormat": "{{method}}"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Latência por Endpoint",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, path))",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "Rate Limit",
      "targets": [
        {
          "expr": "avg(rate_limit_remaining)",
          "legendFormat": "Remaining"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
    }
  ],
  "time": {"from": "now-6h", "to": "now"}
}
