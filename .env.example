# ============ GENERAL ============
ENV=production
LOG_LEVEL=info
STACK_VERSION=1.0.0

# ============ SECURITY ============
API_TOKENS=["token_abc123","token_xyz789","token_production_key"]
POSTGRES_PASSWORD=changeme_secure_pg_password
MINIO_ROOT_USER=aistack
MINIO_ROOT_PASSWORD=changeme_secure_minio_password
GRAFANA_ADMIN_PASSWORD=changeme_secure_grafana_password

# ============ HUGGING FACE ============
HF_TOKEN=hf_your_token_here_for_pyannote

# ============ SERVICES ============
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============ OPENAI ============
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_TIMEOUT=45
OPENAI_ASR_MODEL=whisper-1
OPENAI_INSIGHTS_MODEL=gpt-4o-mini

# ASR (Batch)
DEFAULT_MODEL_NAME=whisper/medium
DEFAULT_COMPUTE_TYPE=int8_float16
DEFAULT_MODEL_REPLICAS=8
MODEL_POOL_SPECS="whisper/medium:int8_float16:8"
ASR_BATCH_WINDOW_SEC=5
ASR_MAX_BATCH_WINDOW_SEC=10
ASR_MAX_BUFFER_SEC=60

# LLM
LLM_FP16_PORT=8001
LLM_INT4_PORT=8002
LLM_MAX_TOKENS=16384
LLM_TIMEOUT=30
LLM_ROUTING_STRATEGY=auto

# OCR
OCR_USE_TENSORRT=true
OCR_FALLBACK_CPU=true
OCR_MAX_PAGES=500

# Analytics
ANALYTICS_MAX_CONCURRENCY=4

# TTS
TTS_SAMPLE_RATE=16000
TTS_VOICE_CACHE_SIZE=100

# ============ DATABASE ============
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aistack
POSTGRES_USER=aistack

# ============ REDIS ============
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB_CACHE=0
REDIS_DB_CELERY=1

# ============ MINIO ============
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_AUDIO=audio
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_ARTIFACTS=artifacts

# ============ CELERY ============
CELERY_BROKER=redis://redis:6379/1
CELERY_BACKEND=redis://redis:6379/2
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=540

# ============ OBSERVABILITY ============
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
PROMETHEUS_SCRAPE_INTERVAL=15s
LOKI_RETENTION_DAYS=30
TEMPO_RETENTION_DAYS=7

# ============ RATE LIMITING ============
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_ASR=100
RATE_LIMIT_OCR=50
RATE_LIMIT_LLM=200
RATE_LIMIT_TTS=80

# ============ PERFORMANCE ============
GPU_MEMORY_FRACTION=0.92
TORCH_CUDNN_BENCHMARK=1
OMP_NUM_THREADS=8

# ============ INSIGHTS ============
INSIGHT_QUEUE_MAXSIZE=200
INSIGHT_WORKER_CONCURRENCY=32
INSIGHT_USE_CELERY=false
INSIGHT_CELERY_TIMEOUT_SEC=15
INSIGHT_CELERY_QUEUE=insights
INSIGHT_MIN_TOKENS=10
INSIGHT_MIN_INTERVAL_SEC=10
INSIGHT_RETAIN_TOKENS=60
INSIGHT_MAX_CONTEXT_TOKENS=180
INSIGHT_MODEL=qwen2.5-14b-instruct-awq
INSIGHT_TEMPERATURE=0.3
INSIGHT_MAX_TOKENS=180
INSIGHT_FLUSH_TIMEOUT=60
